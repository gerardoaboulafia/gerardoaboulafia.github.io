---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Resume — Gerardo Aboulafia">
  <section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <header class="mb-6 text-center">
      <h1 class="text-3xl font-bold">Resume</h1>
      <p class="mt-2 text-slate-600">Download a PDF copy or view it below.</p>
      <div class="mt-4 flex gap-3 justify-center">
        <a href="/resume.pdf" class="underline" download>Download PDF</a>
        <span class="text-slate-400">|</span>
        <a href="/resume.pdf" class="underline" target="_blank" rel="noopener">Open in new tab</a>
      </div>
    </header>

    <!-- Visor embebido -->
    <div class="rounded-lg border shadow-sm overflow-hidden">
      <object
        data="/resume.pdf"
        type="application/pdf"
        class="w-full h-[82vh]"
      >
        <div class="p-6 text-slate-700">
          Your browser can’t display embedded PDFs. 
          <a class="underline" href="/resume.pdf" target="_blank" rel="noopener">Open the PDF</a>.
        </div>
      </object>
    </div>
  </section>
</BaseLayout>
